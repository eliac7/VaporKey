        "privacy",
        "security-tools",
        "terminal",
        "end-to-end-encryption",
        "ephemeral",
        "share"
    ],
    "author": "Ilias Nikolaos Thalassochoritis",
    "license": "MIT",
    "homepage": "https://github.com/eliac7/VaporKey#readme",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/eliac7/VaporKey.git",
        "directory": "apps/cli"
